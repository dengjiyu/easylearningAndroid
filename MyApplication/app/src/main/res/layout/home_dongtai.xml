<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--第一个动态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/abc3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="东软霸霸"
                        android:textColor="#EC4B4C"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/u1645"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:padding="5dp"/>

                </LinearLayout>


            </LinearLayout>
            <!-- 第二个动态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/abc2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="健康生活"
                        android:textColor="#EC4B4C"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/u1645"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="盘点哪些食物可以保护我们的胃..."
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:src="@drawable/abc22"
                        android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--第三个动态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/abc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="原创文学馆"
                        android:textColor="#EC4B4C"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/u1645"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="如果可以、我想告诉你..."
                        android:textSize="15sp" />


                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:src="@drawable/abc33"
                        android:padding="5dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
