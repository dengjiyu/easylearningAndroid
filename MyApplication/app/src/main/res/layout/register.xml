<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="djy.myapplication.MainActivity"
    >

    <!--常用的控件属性：
        1.EditText：
        layout_marginLeft：距左屏幕边距
        layout_below="@+id/imageView":在哪一个控件的下方
        layout_toRightOf"@+id/imageView"：在哪一个控件的右边
        layout_alignStar="@+id/editText"：首端对其哪一个控件
        layout_alignEnd="@+id/editText"：末端对其哪一个控件
        android:layout_alignBottom：下端对其哪一个控件


    -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/login_logo" />

    <EditText
        android:id="@+id/Login_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:maxLines="1"
        android:maxLength="16"
        android:inputType="text"
        android:hint="6-16位数字、字符、下划线"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/Login_editText2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Login_editText"
        android:layout_below="@+id/Login_editText"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="6-12位数字、字母或字符"
        android:maxLength="12"
        android:gravity="center"/>

    <EditText
        android:id="@+id/Login_editText3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Login_editText4"
        android:layout_below="@+id/Login_editText4"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:maxLength="20"
        android:hint="请输入要验证的邮箱号码"
        android:gravity="center"
        android:inputType="textEmailAddress"
         />

    <EditText
        android:id="@+id/Login_editText4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Login_editText2"
        android:layout_below="@+id/Login_editText2"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:hint="6-12位数字、字母或字符"
        android:maxLength="12"
        android:gravity="center"
        android:inputType="textPassword"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:inputType="textPassword"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/Login_editText"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/login_img1" />

    <Button
        android:id="@+id/Register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:text="注册"
        android:layout_below="@+id/Login_editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp">
    </Button>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/login_img2" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/login_img4" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/login_img3" />











</RelativeLayout>
